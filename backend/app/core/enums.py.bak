"""
统一的枚举定义
避免models和schemas中的重复定义
"""
from enum import Enum


# ===== 用户相关 =====
class UserRole(str, Enum):
    """用户角色"""
    USER = "USER"           # 普通用户
    VIP = "VIP"             # VIP用户
    DOCTOR = "DOCTOR"       # 医生用户
    ADMIN = "ADMIN"         # 管理员
    SUPER_ADMIN = "SUPER_ADMIN"  # 超级管理员


class UserStatus(str, Enum):
    """用户状态"""
    ACTIVE = "ACTIVE"       # 活跃
    INACTIVE = "INACTIVE"   # 非活跃
    SUSPENDED = "SUSPENDED" # 暂停
    BANNED = "BANNED"       # 封禁


